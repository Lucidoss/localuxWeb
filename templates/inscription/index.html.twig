{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% block body %}
	<div class="background">
		<div class="shape"></div>
		<div class="shape"></div>
	</div>
	<form action="{{ path('app_register', {uc: 'POST' }) }}" method="POST">
		<h3>Inscription</h3>


		<label for="name">Nom</label>
		<input type="text" placeholder="Entrer votre nom" id="name">

		<label for="firstname">Prenom</label>
		<input type="text" placeholder="Entrer votre prenom" id="firstname">

		<label for="email">Email</label>
		<input type="email" placeholder="Entrer votre email" id="email">

		<label for="phone">Téléphone</label>
		<input type="text" placeholder="Entrer votre téléphone" id="phone">

		<label for="adresse">Adresse</label>
		<input type="text" placeholder="Entrer votre adresse" id="adresse">

		<label for="postalcode">Code Postal</label>
		<input type="text" placeholder="Entrer votre code postal" id="postalcode">

		<label for="city">Ville</label>
		<input type="text" placeholder="Entrer votre ville" id="city">

		<label for="password">Mot De Passe</label>
		<input type="password" placeholder="Entrer votre mot de passe" id="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Doit contenir au moins un chiffre et une lettre majuscule et minuscule, et au moins 12 caractères">
		<div id="bloc1">
        <input type="checkbox" id="checkbox" onclick="togglePassword()">
        </div>
        <p>Afficher le mot de passe</p>
		<button>S'inscrire</button>
		<span>Déjà inscrit ?</br>
		<a href="{{ path('app_connexion') }}">Connecter-vous !</a>
	</span>
</form>
{% endblock %}
